include @top_srcdir@/Makefile.init

INCLPATH = -I@srcdir@/../..   \
           -I@srcdir@/..      \
           -I@srcdir@/guid    \
           -I@prefix@/include

# add the -fpic flag to generate relocatable position independent code
# for the engine so that in can be used in a shared module (e.g. a perl module)
CFLAGS   = @CFLAGS@ ${INCLPATH} -fpic -Wall ${GLIB_CFLAGS}
LIBS     = @LIBS@ ${GLIB_LIBS}

######################################################################
# See Makefile.common for information about these variables.
INDEP_SRCS := AccInfo.c Account.c Backend.c DateUtils.c FileIO.c Group.c \
              LedgerUtils.c Query.c Queue.c Scrub.c Session.c \
              Transaction.c TransLog.c date.c util.c GNCId.c \
              guid/md5.c guid/guid.c
######################################################################

all: default

# This inclusion must come after the first target, and after the
# definitions of *_SRCS, etc., but before the usage of *_OBJS.
include @top_srcdir@/Makefile.common

default: ../libengine.a

../libengine.a: ${OBJS}
	ar vrus libengine.a ${OBJS}
	(cd .. && ln -sf engine/libengine.a .)

TRASH += ../libengine.a libengine.a

.PHONY: all default
