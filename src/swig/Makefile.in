OPT_STYLE_INSTALL=@OPT_STYLE_INSTALL@
ifeq (${OPT_STYLE_INSTALL},0)
  export GNC_DOCDIR=${prefix}/doc/gnucash
  export GNC_BINDIR=${prefix}/bin
